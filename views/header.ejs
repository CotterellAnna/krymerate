<body class="position-relative">
    <div class="container--fluid px-3 py-2 pb-md-2 px-lg-5 text-white" id="nav_header_container">
        <nav class="navbar navbar-light mb-1 px-lg-0">
          <div class="container-fluid p-0">
            <a class="navbar-brand fw-bold text-white" href="#">
              <img src="/images/logo.svg" alt="" width="28.68" height="25.65" class="d-inline-block align-text-top">
              Krymerate
            </a>
          </div>
        </nav>
        <form class="py-2 px-lg-0" id="location_form">
          <p id="title">Get details of crime in any region</p>
          
          <div class="row">
            <div class="col-12 col-md-9">
              <div class="form-floating mb-2 mb-md-0 text-dark">
                <input type="text" class="form-control" id="location" placeholder="Port Harcourt">
                <label for="location">Enter Location</label>
              </div>
            </div>
            <div class="col-12 col-md-3 ps-md-0">
              <button type="submit" class="btn btn-primary mb-3 py-3 w-100 fw-bold text-white" id="get_location_btn">Get Crime Details</button>
            </div>
          </div>
        </form>
    </div>